swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width:100%;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}
.newest-box {
  padding: 0 40rpx;
}

.newest-box .newest-list {
  display: inline-block;
  width: 100%;
  text-align: center;
  border-bottom: 1px solid #ccc;
  padding-top: 20rpx;
}

.newest-box .newest-list:nth-child(2n) {
  margin-right: 0;
}

.newest-box .newest-list image {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0 10rpx;
  float: left;
}

.newest-box .newest-list .newest-text {
  font-size: 24rpx;
}

.product-right {
  text-align: left;
  font-size: 24rpx;
  line-height: 42rpx;
  float: left;
  width: 67%;
  margin-left: 8px;
}

.product-text {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #999;
}

.newest-text text {
  color: #999;
  margin-right: 18rpx;
  margin-left: 6rpx;
}

.price {
  line-height: 50rpx;
  font-size: 35rpx;
  color: #29b672;
  font-weight: bold;
}

.addCart {
  float: right;
  width: 60rpx;
  height: 60rpx;
}

.newest-box .addCart image {
  display: block;
  width: 100%;
  height: 100%;
  margin: 0;
}

.flexBox {
  display: flex;
  line-height: 80rpx
}

.flexL {
  flex: 1;
  text-align: left;
  margin-left: 10px;
}

.flexR {
  flex: 1;
  text-align: right;
  margin-right: 10px;
}
.banner-img{
  width:100%;
  height:100%;
  display:block;
}
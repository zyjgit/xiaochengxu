@import '../../common/common.wxss';

.form-box{
    padding-left: 30rpx;
}
.form-box input{
    height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    font-size: 28rpx;
    color: #999;
}
.form-box .input-placeholder{
    color: #aaa;
}
.form-box button{
    margin:30rpx 30rpx 0 0;
}
.picker-view {

  width: 100%;

  display: flex;

  z-index:12;

  background-color: #fff;

  flex-direction: column;

  justify-content: center;

  align-items: center;

  position: fixed;

  bottom: 0rpx;

  left: 0rpx;

  height: 40vh;

}



.picker-item {

  line-height: 70rpx;

  margin-left: 5rpx;

  margin-right: 5rpx;

  text-align: center;

}